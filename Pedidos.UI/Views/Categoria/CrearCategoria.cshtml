@model Pedidos.Abstracciones.ModelosParaUI.CategoriaDto

@{
    ViewBag.Title = "Crear Nueva Categoría";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="mb-4">@ViewBag.Title</h2>

            @using (Html.BeginForm("CrearCategoria", "Categoria", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="p-4 border rounded shadow-sm bg-light">
                    <h4 class="mb-3">Datos de la Categoría</h4>
                    <hr />

                    @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-check form-switch mt-4">
                        @Html.EditorFor(model => model.Activo, new { htmlAttributes = new { @class = "form-check-input" } })
                        @Html.LabelFor(model => model.Activo, "Activo/Inactivo", new { @class = "form-check-label" })
                        @Html.ValidationMessageFor(model => model.Activo, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <input type="submit" value="Crear Categoría" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            }

            <div class="mt-3">
                @Html.ActionLink("Volver a la Lista", "ListarCategoria", null, new { @class = "btn btn-secondary btn-sm" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}