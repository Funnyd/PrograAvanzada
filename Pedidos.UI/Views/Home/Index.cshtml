@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row tm-content-row tm-mt-big">
    <div class="tm-col tm-col-big">
        <div class="bg-white tm-block h-100">
            <h2 class="tm-block-title" style="text-align: center;">Resumen de Ventas</h2>
            <div class="text-center py-4">
                <h3 class="text-primary">$12,450.00</h3>
                <p class="text-muted">Ventas del Mes</p>
            </div>
        </div>
    </div>

    <div class="tm-col tm-col-big">
        <div class="bg-white tm-block h-100">
            <h2 class="tm-block-title" style="text-align: center;">Productos en Stock</h2>
            <div class="text-center py-4">
                <h3 class="text-success">156</h3>
                <p class="text-muted">Productos Activos</p>
            </div>
        </div>
    </div>

    <div class="tm-col tm-col-small">
        <div class="bg-white tm-block h-100">
            <h2 class="tm-block-title" style="text-align: center;">Pedidos Hoy</h2>
            <div class="text-center py-4">
                <h3 class="text-warning">8</h3>
                <p class="text-muted">Nuevos Pedidos</p>
            </div>
        </div>
    </div>

    <div class="tm-col tm-col-big">
        <div class="bg-white tm-block h-100">
            <div class="row">
                <div class="col-8">
                    <h2 class="tm-block-title d-inline-block">Productos Más Vendidos</h2>
                </div>
                <div class="col-4 text-right">
                    <a href="@Url.Action("ListarProducto", "Producto")" class="tm-link-black">Ver Todos</a>
                </div>
            </div>
            <ol class="tm-list-group tm-list-group-alternate-color tm-list-group-pad-big">
                <li class="tm-list-group-item">
                    Producto A - 45 unidades
                </li>
                <li class="tm-list-group-item">
                    Producto B - 38 unidades
                </li>
                <li class="tm-list-group-item">
                    Producto C - 32 unidades
                </li>
                <li class="tm-list-group-item">
                    Producto D - 28 unidades
                </li>
                <li class="tm-list-group-item">
                    Producto E - 25 unidades
                </li>
            </ol>
        </div>
    </div>

    <div class="tm-col tm-col-big">
        <div class="bg-white tm-block h-100">
            <h2 class="tm-block-title">Actividad Reciente</h2>
            <div class="mt-3">
                <div class="alert alert-light border">
                    <small class="text-muted">Hoy 10:30 AM</small><br>
                    <strong>Nuevo pedido #0012</strong> - Cliente: Alejandro Obregón
                </div>
                <div class="alert alert-light border">
                    <small class="text-muted">Hoy 09:15 AM</small><br>
                    <strong>Producto actualizado</strong> - Producto #12
                </div>
                <div class="alert alert-light border">
                    <small class="text-muted">Ayer 04:20 PM</small><br>
                    <strong>Nuevo cliente registrado</strong> - Daniel Quesada
                </div>
            </div>
        </div>
    </div>


</div>