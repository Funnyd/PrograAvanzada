@model Pedidos.Abstracciones.ModelosParaUI.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 80px;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <!-- CARD MODERNA SIMPLE -->
            <div class="card border-0 shadow-lg">

                <!-- HEADER CON COLOR -->
                <div class="card-header bg-primary text-white py-4">
                    <h2 class="card-title mb-0 text-center">
                        @ViewBag.Title
                    </h2>
                    <p class="text-center mb-0 mt-2 opacity-90">
                        Complete sus datos para crear su cuenta
                    </p>
                </div>

                <!-- BODY DEL FORM -->
                <div class="card-body p-4 p-md-5">

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                        <!-- NOMBRE COMPLETO -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Nombre Completo</label>
                            <input type="text"
                                   id="NombreCompleto"
                                   name="NombreCompleto"
                                   class="form-control form-control-lg"
                                   placeholder="Ej: Juan Pérez"
                                   required />
                            @Html.ValidationMessageFor(m => m.NombreCompleto, "", new { @class = "text-danger small mt-2" })
                        </div>

                        <!-- EMAIL -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Correo Electrónico</label>
                            <input type="email"
                                   id="Email"
                                   name="Email"
                                   class="form-control form-control-lg"
                                   placeholder="ejemplo@correo.com"
                                   required />
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small mt-2" })
                        </div>

                        <!-- CONTRASEÑAS EN 2 COLUMNAS -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">Contraseña</label>
                                <input type="password"
                                       id="Password"
                                       name="Password"
                                       class="form-control form-control-lg"
                                       placeholder="Mínimo 6 caracteres"
                                       required />
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small mt-2" })
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">Confirmar Contraseña</label>
                                <input type="password"
                                       id="ConfirmPassword"
                                       name="ConfirmPassword"
                                       class="form-control form-control-lg"
                                       placeholder="Repita su contraseña"
                                       required />
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small mt-2" })
                            </div>
                        </div>

                        <!-- ROL - SELECT SIMPLE Y FUNCIONAL -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Tipo de Usuario</label>

                            <!-- SELECT SIMPLE sin CSS complejo -->
                            <select id="Rol"
                                    name="Rol"
                                    class="form-select form-select-lg"
                                    required>
                                <option value="">Seleccione un rol</option>
                                <option value="Ventas" @(Model?.Rol == "Ventas" ? "selected" : "")>Ventas</option>
                                <option value="Administrador" @(Model?.Rol == "Administrador" ? "selected" : "")>Administrador</option>
                            </select>

                            @Html.ValidationMessageFor(m => m.Rol, "", new { @class = "text-danger small mt-2" })
                            <small class="text-muted mt-2 d-block">
                                Seleccione el rol que mejor describa su perfil
                            </small>
                        </div>

                        <!-- BOTÓN -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg py-3">
                                Crear Cuenta
                            </button>
                        </div>

                        <!-- ENLACE AL LOGIN -->
                        <div class="text-center mt-4 pt-3 border-top">
                            <p class="mb-0">
                                ¿Ya tienes una cuenta?
                                <a href="@Url.Action("Login")" class="text-decoration-none fw-bold text-primary">
                                    Inicia sesión aquí
                                </a>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}